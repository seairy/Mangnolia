<%= form_for @user, html: { id: 'signup' } do |f| %>
	<%= render 'shared/error_messages', target: @user %>
	<fieldset class="signup generic-form">
		<legend><%= image_tag 'ico_signup.png' %></legend>
		<ul>
			<li><label>邮箱：</label><%= f.text_field :email, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>密码：</label><%= f.password_field :password, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>确认密码：</label><%= f.password_field :password_confirmation, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>姓名：</label><%= f.text_field :name, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>性别：</label><%= f.radio_button :gender, 1 %>男 <%= f.radio_button :gender, 2 %>女</li>
		</ul>
		<ul>
			<li><label>职业：</label><%= f.text_field :occupation, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>所属孔院：</label><%= f.text_field :confucius_institute, :class => 'text-field' %></li>
		</ul>
	</fieldset>
	<div class="action">
		<%= link_to image_tag('btn_submit.png', :alt => '提交'), '#', :onclick => "submitForm('signup')", :class => 'button' %>
	</div>
<% end %>
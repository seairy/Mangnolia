<%= flash_tag %>
<%= form_tag signin_path, :id => 'signin', :method => :post do %>
	<fieldset class="signin generic-form">
		<ul>
			<li><label>邮箱：</label><%= text_field_tag :email, nil, :class => 'text-field' %></li>
		</ul>
		<ul>
			<li><label>密码：</label><%= password_field_tag :password, nil, :class => 'text-field' %></li>
		</ul>
	</fieldset>
	<div class="action">
		<%= link_to image_tag('btn_signin.png', :alt => '登录'), '#', :onclick => "submitForm('signin')", :class => 'button' %>
		<%= link_to image_tag('btn_signup.png', :alt => '注册'), signup_path, :class => 'button' %>
	</div>
<% end %>